html(lang='en')
head
    meta(charset='utf-8')
    title Pandeshwar | Contact
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    meta(name='description', content='')
    meta(name='author', content='')
    link(href='stylesheets/bootstrap.css', rel='stylesheet')
    style(type='text/css')
      body {
      padding-top: 20px;
      padding-bottom: 40px;
      }
      .container-narrow {
      margin: 0 auto;
      max-width: 700px;
      }
      .container-narrow > hr {
      margin: 30px 0;
      }
      .mailreply {
      display: none;
      }
      #chat{
      height:500px;
      overflow:auto;
      }
      #contentWrap{
      display: none;
      }
      #chatWrap{
      float: left;
      border: 1px #cbcbcb dotted;
      }
      .error{
      color: red;
      }
      .whisper{
      color: gray;
      font-style: italic;
      }
      #nickError{
      color: red;
      }
      #users{
      color: #0cf438;
      }
      .timestamp{
      color: #d4d4d4;
      float: right;
      font-size: small;
      }
      #applicationstatus{
        display: none;
      }
    link(href='stylesheets/bootstrap-responsive.css', rel='stylesheet')
  body
    .container
      .masthead
        ul.nav.nav-pills.pull-right
          li
            a(href='/') Home
          li
            a(href='profile.html') Profile
          li
            a(href='applications.html') Applications
          li
            a(href='students.html') Students
          li.active
            a(href='#') Contact
        h3.muted Contact
      hr
      .container
        .hero-unit(style='background-color: #00c4d6; color: #FFFFFF; height: 150px; text-align: center;')
          h1(style='text-align: center;') Together Can We?
        .row
          .span8
            h3 Contact
            p
              b Address: 
              br
              | #474, 5th Cross, 6th Main
              br
              | MSR Nagar
              br
              | Bangalore-560054
              br
              br
              b Mail: 
            .span6
              form
                .controls.controls-row
                  input#name.span3(name='name', type='text', placeholder='Name')
                  input#email.span3(name='email', type='email', placeholder='Email address')
                .controls
                  textarea#message.span6(name='message', placeholder='Your Message', rows='5')
              .controls
                button#contact-submit.btn.btn-primary.input-medium.pull-right(type='submit') Send
          .span4
            h3 Chat Live
            p #{chatstatus}
            br
            #nickWrap
              p Enter your Name:
              p#nickError
              p#applicationstatus Contacting the Server ...
              form#setNick
                input#nickname(size='30')
                button#startchat.btn.btn-primary.btn-small(type='button') Join the Chat
            #contentWrap
              #chatWrap
                #chat
                form#send-message
                  input#messageip(size='35', input='text')
                  input.btn.btn-primary(type='submit')
                  input.btn.btn-info#clearbutton(type='submit' value='Clear') 
              #users

        hr
        footer
          p Â© Sharath Pandeshwar 2013
